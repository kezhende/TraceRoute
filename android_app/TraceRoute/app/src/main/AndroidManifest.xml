<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gps.capstone.traceroute" >

    <!-- Open GL use feature -->
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />
    <!-- Permissions we are asking -->


    <!-- While the user is in the app keep the screen on -->
    <!-- <uses-permission android:name="android.permission.WAKE_LOCK" /> -->


    <!-- Require the senors exist -->
    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.sensor.gyroscope"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.sensor.stepdetector"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.sensor.compass"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".GLFiles.OpenGL"
            android:label="@string/title_activity_open_gl" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DebugConsole"
            android:label="@string/app_name"
            android:parentActivityName=".GLFiles.OpenGL" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gps.capstone.traceroute.GLFiles.OpenGL" />
        </activity>
        <activity
            android:name=".settings.UserSettings"
            android:label="@string/title_user_settings"
            android:parentActivityName=".GLFiles.OpenGL" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.gps.capstone.traceroute.GLFiles.OpenGL" />
        </activity>
    </application>

</manifest>

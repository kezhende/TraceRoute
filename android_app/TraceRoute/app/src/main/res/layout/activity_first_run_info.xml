<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context="com.gps.capstone.traceroute.FirstRunInfo">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:ems="10"
        android:id="@+id/info_height_feet"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/info_height_feet"
        android:text="Height In Feet"
        android:id="@+id/height_text"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Height Inches"
        android:id="@+id/height_inches_text"
        android:layout_below="@+id/info_height_feet"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:ems="10"
        android:id="@+id/info_height_inches"
        android:layout_alignTop="@+id/height_inches_text"
        android:layout_alignStart="@+id/info_height_feet"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:selectAllOnFocus="true"
        android:ems="10"
        android:id="@+id/calculated_stride_length"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/info_height_inches"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stride Length (inches)"
        android:id="@+id/calculated_stride_lenght_text"
        android:layout_alignTop="@+id/calculated_stride_length"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue!"
        android:id="@+id/continue_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/calculate_button"
        android:layout_below="@+id/info_height_inches"
        android:layout_toEndOf="@+id/calculated_stride_lenght_text"
        android:layout_marginTop="71dp"/>

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Switch"
        android:id="@+id/switch1"
        android:layout_below="@+id/info_height_inches"
        android:layout_alignEnd="@+id/info_height_inches"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male or Female"
        android:id="@+id/textView"
        android:layout_below="@+id/info_height_inches"
        android:layout_alignParentStart="true"/>

</RelativeLayout>

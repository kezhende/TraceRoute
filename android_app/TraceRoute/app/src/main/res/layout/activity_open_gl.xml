<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:fab="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.gps.capstone.traceroute.GLFiles.OpenGLActivity"
              android:id="@+id/stuff">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
        <fragment android:id="@+id/frag_open_gl"
                  android:name="com.gps.capstone.traceroute.sensors.OpenGLFragment"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  tools:layout="@layout/fragment_open_gl"/>
        <ImageView android:id="@+id/pointer"
                   android:layout_width="100dp"
                   android:layout_height="100dp"
                   android:scaleType="fitStart"
                   android:src="@drawable/comp"
                   android:layout_gravity="bottom"
                   android:contentDescription="Compass pointer"/>
        <com.melnykov.fab.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="16dp"
            android:src="@android:drawable/ic_media_play"
            fab:fab_shadow="true"
            fab:fab_colorNormal="@color/colorAccent"
            fab:fab_colorPressed="@color/primaryPressed"
            fab:fab_colorRipple="@color/ripple" />
    </FrameLayout>


    <LinearLayout android:orientation="horizontal"
                  style="?android:attr/buttonBarStyle"
                  android:layout_width="match_parent"
                  android:layout_height="0dp"
                  android:layout_weight="1">
        <Button android:id="@+id/start_path_button"
                android:text="@string/start_path_button_text"
                style="?android:attr/borderlessButtonStyle"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        <Button android:id="@+id/stop_path_button"
                android:text="@string/finish_path_button_text"
                style="?android:attr/borderlessButtonStyle"
                android:visibility="gone"
                android:layout_weight="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button android:id="@+id/load_button"
                style="?android:attr/borderlessButtonStyle"
                android:text="@string/load_path_button_text"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <LinearLayout android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!-- Compass Direction-->
            <TextView android:text="@string/compass_info_header"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="20sp"
                      android:paddingTop="10dp"/>

            <TextView android:id="@+id/heading_direction"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"/>

            <TextView android:text="@string/step_coordinates_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingTop="10dp"/>
                <LinearLayout android:id="@+id/prev_step_values"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                </LinearLayout>
            <!--</ScrollView>-->
        </LinearLayout>
    </ScrollView>
</LinearLayout>
